{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "~encore/*": [
                "./backend/encore.gen/*"
            ],
            "~backend/*": [
                "./backend/*"
            ]
        }
    },
    "include": [
        "backend/**/*"
    ],
    "exclude": [
        "frontend",
        "node_modules",
        "dist",
        ".encore"
    ]
}